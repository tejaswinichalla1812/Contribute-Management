<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#757575"
    tools:context=".UserHomeScreen">

    <Button
        android:layout_width="250dp"
        android:text="REGISTER"
        android:textSize="20dp"
        android:id="@+id/registerPage_iv"
        android:padding="30dp"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loginPage_iv"
        android:layout_height="wrap_content"/>

  <Button
        android:layout_width="250dp"
        android:text="LOGIN"
        android:textSize="20dp"
      android:textColor="@color/white"

      android:id="@+id/loginPage_iv"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"/>


    <Button
        android:layout_width="250dp"
        android:text="ABOUT US"
        android:textSize="20dp"
        android:id="@+id/aboutusPage_iv"
        android:padding="30dp"
        android:textColor="@color/white"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginPage_iv"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>